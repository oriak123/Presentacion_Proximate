<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.QuejasyReclamos"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#c4dfe6">

    <ImageView

        android:id="@+id/imageView3"
        android:layout_width="347dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/quejas" />

    <TextView

        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Para nosotros es muy importante tu opinión, es por eso que de antemano te pedimos disculpas por cualquier incidente." />

    <TextView

        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="5dp"
        android:text="Estamos para atender tus insatisfacciones con nuestros productos, por favor comunícate con nosotros, un asesor tendrá el gusto de atenderte." />

    <TextView

        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Líneas de atención 01-8000-12444 o al 313 333 3333 ¡Estamos contigo ¡
" />

    <Button

        android:id="@+id/volverinicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded"
        android:text="INICIO" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLoginFooter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/logonuevo"/>

        <TextView
            android:id="@+id/tvText1Footer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="60dp"
            android:text="AppLegend 2.0"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/ivLoginFooter"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvText2Footer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="45dp"
            android:textColor="@color/black"
            android:text="Líneas de atención 01-8000-12444 o al 313 333 3333"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tvText1Footer"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvText3Footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="60dp"
            android:textColor="@color/black"
            android:text="2022"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tvText2Footer"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>